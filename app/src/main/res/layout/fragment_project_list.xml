<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="isLoading"
            type="boolean" />

        <variable
            name="projectListViewModel"
            type="com.xujiaji.learnmvvm.module.projectlist.ProjectListViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:gravity="center_vertical|center_horizontal"-->
            <!--android:text="正在加载列表..."-->
            <!--android:textAlignment="center"-->
            <!--app:visibleGone="@{isLoading}" />-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:text="Github Projects"
                android:textAlignment="center"
                android:textSize="25sp"
                android:textStyle="bold" />

            <android.support.v4.widget.SwipeRefreshLayout
                android:id="@+id/project_refresh"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:onRefresh="@{projectListViewModel}"
                app:refreshing="@{isLoading}">

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/project_list"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="项目列表"
                    app:items="@{projectListViewModel.items}"
                    app:layoutManager="LinearLayoutManager" />

            </android.support.v4.widget.SwipeRefreshLayout>

        </LinearLayout>

    </LinearLayout>

</layout>